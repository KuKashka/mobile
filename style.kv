<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "LCloud"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            spacing: '10sp'
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Введіть місто"
                mode: "fill"

            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "search-web"
                icon_size: "32sp"
                md_bg_color: app.theme_cls.primary_color
            
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            AsyncImage:
                id: icon
                size: ("150sp", "150sp")
                fit_model: "contain"
                source: 'https://openweathermap.org/img/wn/10d@2x.png'
            MDLabel:
                id: temp
                text: "14°C"
                font_style: 'H1'
                halign: 'center'

            MDLabel:
                id: desc
                text: "Ясно"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: humidity
                text: "Вологість"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: feels_like
                text: "Відчуваєтся як"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: wind
                text: "Вітер"
                font_style: 'H4'
                halign: 'center'
            MDFillRoundFlatButton:
                text: "Дивитися прогноз"
                pos_hint: {'center_x': 0.5}
                on_press: root.shjw_forecast()
            Widget:
                size_hint_y: None
                height: "50sp"


<ForecastScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "LCloud"
            left_action_items: [["arrow-left", lambda x: root.back()]]
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.4